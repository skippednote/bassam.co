{% if links|length %}
  <ul class="u-list-bare">
    {% for link in links %}
      <li class="s-post">
        <h3 class="h-title"><a href="{{ link.url | url | clean }}">{% if link.data.title %}{{ link.data.title | markdown | safe }}{% else %}<code>{{ link.url }}</code>{% endif %}</a></h3>

        <div class="s-meta">
          {% for tag in link.data.tags %}
            <a href="/blog/tags/{{ tag | slug }}" class="tag">{{ tag }}</a>
          {% endfor %}
           Â·
          <time datetime="{{ link.date | htmlDateString }}">{{ link.date | readableDate }}</time>
        </div>

        <div class="s-summary">
          {{ post.data.description }}
        </div>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <h3>No links found</h3>
{% endif %}
